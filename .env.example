# Example environment variables for development
# Copy to `.env` and edit values as appropriate (DO NOT commit your real secrets)

# Database (default: SQLite file in /tmp for quick local dev)
DATABASE_URL=sqlite:////tmp/test.db

# JWT secret key (change in production!)
JWT_SECRET_KEY=changeme

# Flask dev flags
FLASK_APP=src/app.py
FLASK_DEBUG=1
PORT=3001

# Frontend: Vite backend URL (leave empty to use relative /api paths or Vite proxy)
VITE_BACKEND_URL=http://localhost:3001

# CORS origins allowed for the API. Use a comma-separated list in production (e.g. https://example.com)
CORS_ORIGINS=http://localhost:5173
RATELIMIT_DEFAULT=200 per day;50 per hour
# (Optional) Storage backend for rate limiter. Example Redis: redis://localhost:6379/0
# In production set this to a Redis instance to persist counts across processes.
RATELIMIT_STORAGE_URL=
